<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/Scripts/js")
    </head>
    <body>
        <div class="container">
            <div class="navbar navbar-default">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Spectro", "Index", "Home", null, new { @class = "navbar-brand" })</div>
                <div class="navbar-collapse collapse">
                    @if (ViewBag.user != null)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Write a post", "Create", "Post")</li>
                        </ul>
                    }
                    <ul class="nav navbar-nav navbar-right">
                        @if (ViewBag.user == null)
                        {
                            <li>@Html.ActionLink("Sign in", "SignIn", "Account")</li>
                            <li>@Html.ActionLink("Sign up", "SignUp", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Sign out", "SignOut", "Account")</li>
                        }
                    </ul>
                </div>
            </div>
            @RenderBody()
        </div>
    </body>
</html>