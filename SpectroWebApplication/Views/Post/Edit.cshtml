@{
    ViewBag.Title = "Edit post";
}
<h1 data-scheme="/Content/TitleScheme.xml" data-property="title">@ViewBag.post.Title</h1>
<hr />
<div class="post__content">
    <article data-scheme="/Content/ContentScheme.xml" data-property="content">@Html.Raw(ViewBag.post.Content)</article>
</div>
<hr />
<div class="post__controls">
    <button class="btn btn-primary" data-action="update">Update</button>
</div>
<script>
    $(function () {

        // Build schemas
        $('[data-scheme]').each(function () {
            var $element = $(this),
                scheme = $element.attr('data-scheme');

            $.get(scheme, function (response) {
                $element.spectro('enable', {
                    scheme: response
                });
            });
        });

        // Update post
        $('[data-action="update"]').click(function () {
            var $button = $(this);

            $button.attr('disable', true);

            $('[data-scheme]').spectro('disable');

            var title = $('[data-property="title"]').text(),
                content = $('[data-property="content"]').html();

            $.post('@Url.Action("Edit", "Post", new { id = @ViewBag.post.ID })', { title: title, content: content }, function (response) {
                window.location = response;
            });
        });
    });
</script>